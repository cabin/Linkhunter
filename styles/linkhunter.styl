@import nib;


// Normalize  ////////////////////////////////////////////////////////////////

// Sane box-sizing for life!
*
  box-sizing: border-box
  reset-box-model()

// I never use `href`-less `a` elements as anchors; they're always clickable.
a { cursor: pointer; text-decoration: none }

// Minimize useless/accidental mouse interactions.
body { -webkit-user-select: none }
img { -webkit-user-drag: none }


// Common variables, functions, mixins, etc.  ////////////////////////////////

panel-width = 400px
gutter = 10px
input-height = 30px
item-height = 50px
item-padding = 9px
visible-items = 9
scroll-width = 2px
image-size = input-height
privacy-badge-size = 15px

text-color = #333
salmon-color = #f33
background-color = #f1f1f1
highlight-color = #fbfbfb
border-color = #e8e8e8
medium-border-color = #d2d2d2
dark-border-color = #d8d8d8
wrapper-background-color = #e4e4e4
wrapper-border-color = #ddd

size(w, h = w)
  width: w
  height: h

image-sized(img)
  w = image-size(img)[0]
  h = image-size(img)[1]
  image: img w h

replace-text-retina(img)
  hide-text()
  image-sized: img
  size: image-size(img)[0] image-size(img)[1]


// *-text ought to be classes for use with @extend, but Stylus's @extend has
// some bugs compared to Sass. https://github.com/LearnBoost/stylus/issues/571
medium-text()
  color: #666
  font-size: 11px
  font-weight: normal

light-text()
  medium-text()
  color: #999

bold-text()
  color: text-color
  font-weight: bold
  font-size: 13px

italic-text()
  color: text-color
  font-family: Georgia, serif
  font-size: 14px
  font-style: italic
  font-weight: normal

small-caps-text()
  color: #000
  font-family: inherit
  font-size: 10px
  font-weight: bold
  text-shadow: #fff 0 1px
  text-transform: uppercase

.curved-wrapper
  background-color: wrapper-background-color
  border: 1px solid wrapper-border-color
  border-radius: 4px


// Common styles  ////////////////////////////////////////////////////////////

body
  font-family: Helvetica Neue, sans-serif
  font-size: 12px

#panel
  padding: gutter - 4
  width: panel-width + @padding * 2

.in-iframe #panel
  background-color: #fff
  border-radius: 5px
  border: 1px solid rgba(#000, 0.4)
  box-shadow: 0 0 50px rgba(#000, 0.4)
  margin: 15px 15px 50px auto
  padding: gutter
  width: panel-width + gutter * 2 + 2

input, .pseudo-input
  background: white
  border-radius: 5px
  border: 1px solid border-color
  box-shadow: inset 0 1px 2px rgba(128, 128, 128, .1)
  font-family: inherit
  font-size: 16px
  line-height: 19px
  outline: none
  padding: 5px gutter
input::-webkit-input-placeholder, .pseudo-input .placeholder
  color: #aaa
input[type=checkbox]
  margin-right: 5px

button, .button
  small-caps-text()
  background-image: linear-gradient(bottom, #ddd, #eaeaea)
  border-radius: 4px
  border: 1px solid dark-border-color
  box-shadow: inset 0 1px #fff, 0 1px #fff
  cursor: pointer
  display: inline-block
  height: input-height
  padding: 0 gutter * 1.5
  &:hover
    background-image: linear-gradient(bottom, #eaeaea, #f4f4f4)
  &:active
    background-image: linear-gradient(top, #ddd, #eaeaea)
    box-shadow: inset 0 1px #bbb, 0 1px #fff

label {
  display: inline-block;
  margin-bottom: gutter;
}

.panel
  background: url(../images/texture.png)
  border-radius: 5px
  border: 1px solid border-color
  overflow: hidden
  padding-top: gutter * 3
  position: relative
  h1
    text-align: center
    .logo, span
      display: block
      margin: 0 auto gutter
    .logo
      replace-text-retina('../images/mark/48.png')
  h2
    italic-text()
    color: #aaa
    margin-bottom: gutter * 3
    text-align: center
  h2.feedback
    color: salmon-color
  .close
    absolute: top gutter right gutter
    replace-text-retina('../images/icons/close-default.png')
    &:hover
      image-sized('../images/icons/close-hover.png')
  form
    margin: 0 auto
  input:not([type=checkbox]), .pseudo-input
    border: 1px solid medium-border-color
    margin-bottom: gutter
    width: 100%
  button
    display: block
    margin-top: gutter

  // Animations for loading.
  h1, h2
    transition: -webkit-transform .5s ease-in-out
  form
    transition-property: -webkit-transform, opacity
    transition-duration: .5s, 250ms
    transition-delay: 0, 250ms
    transition-easing: ease-in-out
  &.loading
    h1, h2
      transform: translateY(100px)
    .logo
      image-sized: '../images/loading.gif'
    form
      transform: translateY(500px)
      transition-delay: 0, 0
      opacity: 0
  &.loading.done
    .logo
      background-image: url(../images/mark/48.png)


