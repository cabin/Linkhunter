{
  "manifest_version": 2,
  "name": "Linkhunter",
  "description": "Add and search your links on Pinboard.",
  "version": "2.0.0",

  "background": {
    "scripts": ["events.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Linkhunter",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "mac": "Command+J"
      }
    }
  },

  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "https://*.pinboard.in/"
  ]
}
